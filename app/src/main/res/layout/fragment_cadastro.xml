<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Tarefa"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/taskNameInput"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center_vertical"
        android:hint="Nome da tarefa"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/taskDescriptionInput"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:hint="Descrição da tarefa"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/taskNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/taskDateInput"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:hint="Informe a data (dd/MM/yyyy)"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/taskDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/taskCategoryInput"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:hint="Categoria"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/taskDateInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Salvar Tarefa"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/taskCategoryInput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
